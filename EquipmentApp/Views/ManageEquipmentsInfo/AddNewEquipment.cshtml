@{
    ViewBag.Title = "Add New Equipment";
}
<form name="myForm">
    <table><tr><td height="10px"></td></tr></table>

    <table  cellpadding="4" cellspacing="4" width="70%" align="center" style="background-color: skyblue;border:solid 2px red; padding-top:20px;">
        <tr>
            <td colspan="3" style="background-color:gray; font-size:18pt;font-weight:bold; height:30px; text-align:center;">
                Add New Equipment
            </td>
        </tr>
        <tr>
            <td style="text-align:right;">Equipment ID</td>
            <td><input name="Id" type="number" ng-model="Id" ng-required="true" min="0"/></td>
           
        </tr>
        
        <tr>
            <td style="text-align:right;">Name</td>
            <td><input type="text" ng-model="EquipmentName" />  </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <button data-ng-click="myForm.Id.$valid && save()" > Save </button>
            </td>
        </tr> 

    </table>
    </form>

